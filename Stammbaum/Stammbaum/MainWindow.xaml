<Window x:Class="Stammbaum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stammbaum"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True" Margin="0,0,0,55" HorizontalAlignment="Right" Width="792">
            <ListBox x:Name="lb" HorizontalAlignment="Left" Margin="10,28,0,0" Width="470" DockPanel.Dock="Left"/>
            <ListBox x:Name="lb_f" HorizontalAlignment="Left" Margin="0,28,0,0" Width="302" DockPanel.Dock="Right"/>
        </DockPanel>
        <DockPanel LastChildFill="True" Height="55" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="792">
            <Button x:Name="bt_fa" Content="Familie anzeigen" HorizontalAlignment="Left" Margin="320,0,0,10" Width="160" Click="bt_fa_Click" Height="35" VerticalAlignment="Bottom" DockPanel.Dock="Left"/>
            <Button x:Name="bt_clear" Content="Leeren" HorizontalAlignment="Left" Margin="222,0,0,10" Width="80" Click="bt_clear_Click" Height="35" VerticalAlignment="Bottom" DockPanel.Dock="Right"/>
        </DockPanel>
    </Grid>
</Window>
